    <title>Sistem Perpustakaan</title>
    
    <style>
    /* 1. SKEMA WARNA & PENGATURAN DASAR */
    :root {
        --primary-color: #007bff;
        --primary-hover: #0056b3;
        --danger-color: #dc3545;
        --danger-hover: #c82333;
        --light-bg: #f8f9fa;
        --dark-nav: #343a40;
        --text-color: #212529;
        --border-color: #dee2e6;
        --box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    /* 2. LAYOUT UTAMA (STICKY FOOTER) */
    html {
        height: 100%;
    }
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        margin: 0;
        background-color: var(--light-bg);
        color: var(--text-color);
        min-height: 100%;
        display: flex;
        flex-direction: column;
    }
    .container {
        width: 90%;
        max-width: 900px;
        margin: 0 auto;
        padding: 2.5em 0;
    }
    main {
        flex-grow: 1;
    }

    /* 3. KOMPONEN UI (NAV, TABLE, BUTTON, FORM) */
    h1 {
        font-size: 2.2rem;
        margin-bottom: 0.5em;
        color: var(--dark-nav);
    }
    a {
        color: var(--primary-color);
        text-decoration: none;
        transition: color 0.2s ease-in-out;
    }
    a:hover {
        color: var(--primary-hover);
        text-decoration: underline;
    }
    nav {
        background-color: var(--dark-nav);
        padding: 1em 5%;
        margin-bottom: 0; /* Dihapus agar menyatu */
    }
    nav a {
        color: white;
        font-weight: bold;
        padding: 8px 12px;
        border-radius: 5px;
        transition: background-color 0.2s ease-in-out;
    }
    nav a:hover {
        background-color: rgba(255, 255, 255, 0.1);
        text-decoration: none;
    }
    
    /* Tabel Interaktif */
    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 1.5em;
        box-shadow: var(--box-shadow);
        background-color: white;
        border-radius: 8px;
        overflow: hidden; /* Agar border-radius terlihat di sudut tabel */
    }
    th, td {
        border-bottom: 1px solid var(--border-color);
        padding: 16px;
        text-align: left;
    }
    th {
        background-color: var(--light-bg);
    }
    tbody tr:hover {
        background-color: #f1f1f1; /* Efek hover pada baris tabel */
    }
    td a {
        font-weight: bold;
    }
    
    /* Tombol-tombol */
    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.2s ease-in-out;
        display: inline-block;
        text-align: center;
    }
    .btn-edit {
        background-color: var(--primary-color);
        color: white;
    }
    .btn-edit:hover {
        background-color: var(--primary-hover);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }
    .btn-delete {
        background-color: var(--danger-color);
        color: white;
        margin-left: 8px;
    }
    .btn-delete:hover {
        background-color: var(--danger-hover);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }

    /* Form Modern */
    .form-container {
        background-color: white;
        padding: 2em;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
        margin-top: 1.5em;
    }
    .form-group {
        margin-bottom: 1.5em;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5em;
        font-weight: bold;
    }
    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid var(--border-color);
        border-radius: 5px;
        box-sizing: border-box; /* Penting agar padding tidak merusak layout */
        transition: border-color 0.2s, box-shadow 0.2s;
    }
    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
    }

    /* Footer */
    footer {
        text-align: center;
        padding: 1.5em 0;
        color: #6c757d;
        background-color: #e9ecef;
        border-top: 1px solid var(--border-color);
        margin-top: auto; /* Mendorong footer ke bawah dalam flexbox */
    }
</style>
