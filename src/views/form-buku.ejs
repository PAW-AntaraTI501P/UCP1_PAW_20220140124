<%- include('partials/header') %>
<div class="container">
    <% if (buku) { %>
        <h1>Edit Buku</h1>
    <% } else { %>
        <h1>Tambah Buku Baru</h1>
    <% } %>

    <div class="form-container">
        <form action="<%= buku ? '/buku/' + buku.id + '?_method=PUT' : '/buku' %>" method="POST">
            <div class="form-group">
                <label for="judul">Judul:</label>
                <input type="text" id="judul" name="judul" class="form-control" value="<%= buku ? buku.judul : '' %>" required>
            </div>
            <div class="form-group">
                <label for="penulis">Penulis:</label>
                <input type="text" id="penulis" name="penulis" class="form-control" value="<%= buku ? buku.penulis : '' %>">
            </div>
            <div class="form-group">
                <label for="penerbit">Penerbit:</label>
                <input type="text" id="penerbit" name="penerbit" class="form-control" value="<%= buku ? buku.penerbit : '' %>">
            </div>
            <div class="form-group">
                <label for="tahun_terbit">Tahun Terbit:</label>
                <input type="number" id="tahun_terbit" name="tahun_terbit" class="form-control" value="<%= buku ? buku.tahun_terbit : '' %>">
            </div>
            <button type="submit" class="btn btn-edit">Simpan</button>
            <a href="/buku" style="margin-left: 10px;">Batal</a>
        </form>
    </div>
</div>
<%- include('partials/footer') %>