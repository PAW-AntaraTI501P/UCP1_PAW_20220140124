<%- include('partials/header') %>

<% if (buku) { %>
    <h1>Edit Buku</h1>
    <form action="/buku/<%= buku.id %>?_method=PUT" method="POST">
<% } else { %>
    <h1>Tambah Buku Baru</h1>
    <form action="/buku" method="POST">
<% } %>
    <div>
        <label>Judul:</label>
        <input type="text" name="judul" value="<%= buku ? buku.judul : '' %>" required>
    </div>
    <div>
        <label>Penulis:</label>
        <input type="text" name="penulis" value="<%= buku ? buku.penulis : '' %>">
    </div>
    <div>
        <label>Penerbit:</label>
        <input type="text" name="penerbit" value="<%= buku ? buku.penerbit : '' %>">
    </div>
    <div>
        <label>Tahun Terbit:</label>
        <input type="number" name="tahun_terbit" value="<%= buku ? buku.tahun_terbit : '' %>">
    </div>
    <button type="submit">Simpan</button>
</form>

<a href="/buku">Kembali ke Daftar Buku</a>

<%- include('partials/footer') %>